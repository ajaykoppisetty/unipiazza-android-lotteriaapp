<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp" >
    
        <TextView
        android:id="@+id/complimenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complimenti"
        android:textColor="#fff"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hai_vinto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hai_vinto"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="14dp"
        android:background="@drawable/bg_orange"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prize_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/prize_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Una Caraffa"
            android:textColor="#f58220"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

            <TextView
        android:id="@+id/presso"
        android:text="@string/presso"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
         />
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="3 Scalini"
            android:textStyle="bold"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/shop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c9c9c9"
            android:textStyle="italic"
            android:text="Via san Farancesco 12"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>